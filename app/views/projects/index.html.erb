<h1><%= pluralize(@projects.size, "project") %></h1>

<%= currently_at 'Projects' %>

<article>
  <% @projects.each do |project| %>
    <header>
      <%= link_to project.title, project_path(project) %>
    </header>
    <p>
      <%= truncate(project.description, length: 80, separator: ' ') %> 
    </p>
    <p>
      <%= pluralize(project.tracks.size, "track") %>
    </p>
    <p><%= link_to "Edit", edit_project_path(project) %></p>
  <% end %>
</article>

<% content_for :functional_nav do %>
  <ul>
    <li><%= link_to "Create new Project", new_project_path %></li>
  </ul>
<% end %>
