<%= currently_at 'Projects' %>

<%= form_for([@track, @comment]) do |f| %>
  <%= render partial: 'shared/errors', locals: { attribute: @comment } %>
  <fieldset>
    <ol>
      <li class='required'>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>
      <li class='required'>
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7 %>
      </li>
      <%= render 'shared/markdown_instructions' %>
      <p>
        <%= f.submit class: "button" %> |
        <%= link_to "Cancel", return_path_or(:back) %>
      </p>
    </ol>
  </fieldset>
<% end %>
