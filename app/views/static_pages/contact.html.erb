<%= provide(:title, 'Contact') %>

<%= currently_at('Home') %>

<h1>Contact</h1>

<p><%= t('.contact_description') %></p>

<%= form_for @message, url: message_path do |f| %>
  <%= render partial: 'shared/errors', locals: { attribute: @message } %>
  <fieldset>
    <ol>
      <li class='required'>
        <%= f.label :email, t('.email') %>
        <%= f.text_field :email %>
      </li>
      <li class='required'>
        <%= f.label :subject %>
        <%= f.text_field :subject %>
      </li>
      <li class='required'>
        <%= f.label :message %>
        <%= f.text_area :message, cols: 50, rows: 7 %>
      </li>
      <li class='inline'>
        <%= f.check_box :copy_me %>
        <%= f.label :copy_me, t('.copy_me') %>
      </li>
      <li>
        <%= f.submit 'Send', class: "ok-button" %>
      </li>
    </ol>
  </fieldset>
<% end %>

<% content_for :secondary_nav do %>
  <%= breadcrumbs [link_to('Home', root_path),
                   'Contact' ] %>
<% end %>

