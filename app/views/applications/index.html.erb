<h1><%= pluralize(@applications.size, "Application") %></h1>

<article>
  <% @applications.each do |application| %>
    <header>
      <%= link_to application.title, application_path(application) %>
    </header>
    <p>
      <%= truncate(application.description, lenght: 40, separator: ' ') %> 
    </p>
  <% end %>
</article>
